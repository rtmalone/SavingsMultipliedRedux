%html{lang: "en"}
  %head
    %title= content_for(:html_title) || SavingsMultpliedRedux
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag "vendor/custom.modernizr"
    %meta{ charset: "utf-8"}/
    / Uncomment to make IE8 render like IE7
    / <meta http-equiv="X-UA-Compatible" content="IE=7" />
    / Set the viewport width to device width for mobile
    %meta{ content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    = csrf_meta_tags
  %body
    #top
      %ul#devise_navigation
        - if user_signed_in?
          %li
            You are signed in as
            = link_to(current_user.full_name, main_app.user_path(current_user))
          %li= link_to('sign out', "#")
        - else
          %li= link_to("sign in", "#")
          %li= link_to("sign up", "#")
      %header
        .left-column
          %h1= image_tag "savings-multiplied-logo.png"
        .right-column
          %ul#page_navigation
            %li.blue= link_to "About", "#"
            %li.green= link_to "Contact", "#"
            %li.purple= link_to "Blog", "#"
            %li.pink= link_to "Press", "#"
          %h5 where parents of multiples save, sell &amp; share
        .clear
    %nav
      %ul#main_navigation
        %li= link_to "Buy", "#"
        %li= link_to "Sell", "#"
        %li= link_to "How it Works", "#"
        %li= link_to "Links", "#"
        %li= link_to "Community", "#"
        %li= render partial: "auction_searches/search_term_form"
    #bottom
      #content
        .notice= notice
        .alert= alert
        = yield
      %footer
        %ul
          %li= link_to "Link here", "#"
          %li= link_to "Link here", "#"
          %li= link_to "Link here", "#"
          %li= link_to "Link here", "#"
          %li= link_to "Link here", "#"
          %li= link_to "Link here", "#"
      = javascript_include_tag 'application', 'data-turbolinks-track' => true
